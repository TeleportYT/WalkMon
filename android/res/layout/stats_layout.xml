<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/state"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF0000"
            android:fontFamily="@font/gungeon"
            android:gravity="center"
            android:lines="1"
            android:text="Winned"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:autoSizeTextType="none" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            android:fontFamily="@font/gungeon"
            android:gravity="center|left"
            android:lines="1"
            android:text="  Score  "
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|right"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            android:lines="1"
            android:text="1400  "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            android:fontFamily="@font/gungeon"
            android:gravity="center|left"
            android:lines="1"
            android:text="  Time  "
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|right"
            android:lines="1"
            android:text="14:00  "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|left"
            android:lines="1"
            android:text="  Enemies Killed  "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/killed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|right"
            android:lines="1"
            android:text="32  "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:autoSizeTextType="uniform" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|left"
            android:lines="1"
            android:text="  Player Health  "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:autoSizeMaxTextSize="40sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/hp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gungeon"
            android:gravity="center|right"
            android:lines="1"
            android:text="100           "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="?android:attr/textColorPrimaryNoDisable"
            app:autoSizeTextType="uniform" />
    </LinearLayout>
</LinearLayout>